<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient4b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Ret" >
    
    <TextView
        android:id="@+id/ret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:text="@string/ret" />

    <ImageView
        android:id="@+id/retmsg"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ret"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/ret"
        android:src="@drawable/retmsg" />
    
     <TextView
         android:id="@+id/lexpenseview"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/avail"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="2dp"
         android:background="@drawable/custombutton"
         android:gravity="center"
         android:textSize="30sp"
         android:onClick="DisplayList"/>
     <TextView
         android:id="@+id/catview"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/lexpenseview"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="2dp"
         android:gravity="center"
         android:textSize="15sp" />

    <TextView
        android:id="@+id/avail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retmsg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="Arial"
        android:text="@string/last"
        android:textSize="15sp" />
    
    <Button
         android:id="@+id/addrExp"
         android:layout_width="129.2dp"
         android:layout_height="70.3dp"
         android:layout_centerHorizontal="true"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="25dp"
         android:background="@drawable/custombutton4"
         android:onClick="addrexp"
         android:gravity="center"
         
          />

</RelativeLayout>
